<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/logo"
        android:id="@+id/cchatsAdImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="loading..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cchatsAdImg"
        android:layout_toEndOf="@+id/cchatsAdImg"
        android:id="@+id/cchatsAdTitleTxt"
        android:textColor="#333"
        android:textStyle="normal|bold"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:text="loading..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cchatsAdTitleTxt"
        android:layout_alignStart="@+id/cchatsAdTitleTxt"
        android:id="@+id/cchatsSenderTxt"
        android:textSize="12sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:text="loading..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cchatsAdImg"
        android:layout_alignParentEnd="true"
        android:id="@+id/cchatsDateTxt"
        android:layout_marginRight="10dp"
        android:textSize="11sp"/>

    <TextView
        android:text="loading..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cchatsSenderTxt"
        android:layout_alignStart="@+id/cchatsSenderTxt"
        android:id="@+id/cchatsLastMessTxt"
        android:textSize="11sp"
        android:textColor="@color/main_color"
        android:maxLines="2"/>

</RelativeLayout>