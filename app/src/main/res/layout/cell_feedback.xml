<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
        app:srcCompat="@drawable/star0"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/feedsStarsImg"
        android:scaleType="centerCrop"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="80dp"/>

    <TextView
        android:text="@string/txt_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedsByDateTxt"
        android:layout_alignBottom="@+id/feedsStarsImg"
        android:layout_toEndOf="@+id/feedsStarsImg"
        android:layout_marginLeft="10dp"
        android:textColor="#333"
        android:textSize="12sp"
        android:textStyle="normal|bold"
        android:maxLines="1"
        android:singleLine="true"/>

    <TextView
        android:text="@string/txt_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedsAdTitleTxt"
        android:textSize="12sp"
        android:textColor="#333"
        android:layout_below="@+id/feedsStarsImg"
        android:layout_alignStart="@+id/feedsStarsImg"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:singleLine="true"
        android:maxLines="1"/>

    <TextView
        android:text="@string/txt_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedsAdTitleTxt"
        android:layout_alignStart="@+id/feedsAdTitleTxt"
        android:id="@+id/feedsFeedbackTxt"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="11sp"/>
</RelativeLayout>