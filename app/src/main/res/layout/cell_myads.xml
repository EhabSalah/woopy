<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_height="50dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cmaImage"
        android:layout_width="50dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:text="loading..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cmaImage"
        android:layout_toEndOf="@+id/cmaImage"
        android:id="@+id/cmaAdTitleTxt"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:textStyle="normal|bold"
        android:textColor="#333"
        android:maxLines="2"/>

    <TextView
        android:text="loading..."
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:id="@+id/cmaPricetxt"
        android:textSize="11sp"
        android:layout_alignBottom="@+id/cmaImage"
        android:layout_alignStart="@+id/cmaAdTitleTxt"
        android:gravity="center_vertical"/>

    <ImageView
        app:srcCompat="@drawable/small_time_icon"
        android:id="@+id/cmaTimeIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/cmaDatetxt"
        android:layout_toStartOf="@+id/cmaDatetxt"/>

    <TextView
        android:text="loading..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cmaDatetxt"
        android:textSize="11sp"
        android:gravity="center_vertical"
        android:layout_alignBaseline="@+id/cmaPricetxt"
        android:layout_alignBottom="@+id/cmaPricetxt"
        android:layout_alignEnd="@+id/cmaAdTitleTxt"
        android:layout_marginRight="60dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/discluse_indicator"
        android:id="@+id/imageView25"
        android:layout_alignTop="@+id/cmaAdTitleTxt"
        android:layout_alignEnd="@+id/cmaAdTitleTxt"/>
</RelativeLayout>